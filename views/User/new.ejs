<% layout('layouts/boilerplate') %> 
<body>
    <h1>Create a New User</h1>
    <form action="/users" method="POST" novalidate class="validated-form">
        <label class="form-label" for="username">Enter a Username: </label>
        <div class="input-group mb-3">
            <span class="input-group-text" id="inputUsername">@</span>
            <input id="username" type="text" name="user[username]" required class="form-control" placeholder="Username" aria-label="Username" aria-describedby="basic-addon1">
          </div>
          <label class="form-label" for="password">Enter a Password: </label>
          <div class="input-group mb-3">
            <span class="input-group-text" id="inputPassword">
                <!-- 'key' svg -->
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-key" viewBox="0 0 16 16">
                    <path d="M0 8a4 4 0 0 1 7.465-2H14a.5.5 0 0 1 .354.146l1.5 1.5a.5.5 0 0 1 0 .708l-1.5 1.5a.5.5 0 0 1-.708 0L13 9.207l-.646.647a.5.5 0 0 1-.708 0L11 9.207l-.646.647a.5.5 0 0 1-.708 0L9 9.207l-.646.647A.5.5 0 0 1 8 10h-.535A4 4 0 0 1 0 8zm4-3a3 3 0 1 0 2.712 4.285A.5.5 0 0 1 7.163 9h.63l.853-.854a.5.5 0 0 1 .708 0l.646.647.646-.647a.5.5 0 0 1 .708 0l.646.647.646-.647a.5.5 0 0 1 .708 0l.646.647.793-.793-1-1h-6.63a.5.5 0 0 1-.451-.285A3 3 0 0 0 4 5z"/>
                    <path d="M4 8a1 1 0 1 1-2 0 1 1 0 0 1 2 0z"/>
                </svg>
            </span>
            <input id="password" type="password" name="user[password]" required class="form-control" placeholder="Password" aria-label="Username" aria-describedby="basic-addon1">
          </div>
          <label class="form-label" for="email">Enter a Valid Email: </label>
          <div class="input-group mb-3">
            <span class="input-group-text" id="inputEmail">
                <!-- 'email' svg -->
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-envelope" viewBox="0 0 16 16">
                    <path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V4zm2-1a1 1 0 0 0-1 1v.217l7 4.2 7-4.2V4a1 1 0 0 0-1-1H2zm13 2.383-4.758 2.855L15 11.114v-5.73zm-.034 6.878L9.271 8.82 8 9.583 6.728 8.82l-5.694 3.44A1 1 0 0 0 2 13h12a1 1 0 0 0 .966-.739zM1 11.114l4.758-2.876L1 5.383v5.73z"/>
                </svg>
            </span>
            <input id="email" type="email" name="user[email]" required class="form-control" placeholder="amarillo@yahoo.com" aria-label="Username" aria-describedby="basic-addon1">
          </div>
          <label class="form-label" for="picture">Enter Profile Pic URL: </label>
          <div class="input-group mb-3">
            <span class="input-group-text" id="inputPicture">
                <!-- 'camera' svg -->
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-camera2" viewBox="0 0 16 16">
                  <path d="M5 8c0-1.657 2.343-3 4-3V4a4 4 0 0 0-4 4z"/>
                  <path d="M12.318 3h2.015C15.253 3 16 3.746 16 4.667v6.666c0 .92-.746 1.667-1.667 1.667h-2.015A5.97 5.97 0 0 1 9 14a5.972 5.972 0 0 1-3.318-1H1.667C.747 13 0 12.254 0 11.333V4.667C0 3.747.746 3 1.667 3H2a1 1 0 0 1 1-1h1a1 1 0 0 1 1 1h.682A5.97 5.97 0 0 1 9 2c1.227 0 2.367.368 3.318 1zM2 4.5a.5.5 0 1 0-1 0 .5.5 0 0 0 1 0zM14 8A5 5 0 1 0 4 8a5 5 0 0 0 10 0z"/>
                </svg>
            </span>
            <input id="picture" type="url" name="user[profilePicture]" required class="form-control" placeholder="Please enter a valid URL" aria-label="Username" aria-describedby="basic-addon1">
          </div>

        <button class="btn cream-fill">Submit</button>
    </form>
